<Window x:Class="DCM_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        x:Name="Wind">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*"/>
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="278*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Image Source="{Binding SourceImage,ElementName = Wind}"/>
        <Image Grid.Row="0" Grid.Column="1"/>
        <Button Content="Открыть" Grid.Column="1" HorizontalAlignment="Left" Margin="174,0,0,9" Grid.Row="1" Width="75" Height="20" VerticalAlignment="Bottom" Click="OpenButton_OnClick"/>

    </Grid>
</Window>
